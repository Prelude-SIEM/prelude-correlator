# Schedule rule example
#
schedule = * * * * *
$TEST = RUN EVERY MINUTE

schedule = 0 * * * *
$TEST = RUN EVERY HOUR

schedule = 0 0 * * *
$TEST = RUN EVERY DAY

schedule = 0 0 * * 0
$TEST = RUN EVERY WEEK


#
# For loop / conditional example

pattern = messageid: (.+)
$EXAMPLE_$1 = $EXAMPLE_$1 + 1

for $i in $EXAMPLE_.* {
	$TEST = $i
}


if $EXAMPLE_$1 > 10 {
	$TEST = blah
}



#
# Global variable example
#

global $EXAMPLE_GLOBAL = 100